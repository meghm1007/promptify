{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 3,
  "name": "Promptify - Prompt Manager & Enhancer",
  "version": "3.3.3",
  "description": "Store, categorize, and improve your prompts. Up to 50 custom prompts with folder organization.",
  "permissions": ["storage", "activeTab", "declarativeNetRequest"],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://claude.ai/*",
    "https://poe.com/*",
    "https://perplexity.ai/*",
    "https://bard.google.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "logo (1).png",
      "48": "logo (1).png",
      "128": "logo (1).png"
    }
  },
  "icons": {
    "16": "logo (1).png",
    "48": "logo (1).png",
    "128": "logo (1).png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*", 
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://poe.com/*",
        "https://perplexity.ai/*",
        "https://bard.google.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}

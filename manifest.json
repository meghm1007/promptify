{
  "manifest_version": 3,
  "name": "Promptify - Store and Access Your ChatGPT Prompts",
  "version": "3.0.0",
  "description": "Efficiently manage and use your ChatGPT prompts",
  "permissions": ["storage", "activeTab"],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "logo (1).png",
      "48": "logo (1).png",
      "128": "logo (1).png"
    }
  },
  "icons": {
    "16": "logo (1).png",
    "48": "logo (1).png",
    "128": "logo (1).png"
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*", "https://chatgpt.com/*", "https://www.perplexity.ai/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
